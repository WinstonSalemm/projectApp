<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProjectApp.Client.Maui.ViewModels"
             x:Class="ProjectApp.Client.Maui.Views.ContractsPage"
             x:DataType="vm:ContractsViewModel"
             Title="Договора">
    
    <Grid RowDefinitions="Auto,*" Padding="10">
        <!-- Toolbar -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,10">
            <Button Text="➕ Создать договор" 
                    Command="{Binding CreateContractCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"/>
            
            <Button Text="🔄 Обновить" 
                    Command="{Binding LoadContractsCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"/>
        </HorizontalStackLayout>

        <!-- Список договоров -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Contracts}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedContract}"
                        SelectionChangedCommand="{Binding ViewContractCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" 
                           Padding="15" 
                           BorderColor="#E0E0E0"
                           CornerRadius="10"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <!-- Header -->
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding ContractNumber, StringFormat='№ {0}'}" 
                                       FontSize="18" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Type}" 
                                       FontSize="12" 
                                       TextColor="Gray"
                                       VerticalOptions="Center"/>
                                <Label Text="{Binding Status}" 
                                       FontSize="12" 
                                       TextColor="{Binding StatusColor}"
                                       VerticalOptions="Center"
                                       HorizontalOptions="EndAndExpand"/>
                            </HorizontalStackLayout>

                            <!-- Client -->
                            <Label Text="{Binding ClientName}" 
                                   FontSize="14" 
                                   TextColor="#333"/>

                            <!-- Progress bars -->
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="💰 Оплата:" FontSize="12"/>
                                <Label Text="{Binding PaidPercent, StringFormat='{0:F0}%'}" 
                                       FontSize="12" 
                                       FontAttributes="Bold"/>
                            </HorizontalStackLayout>
                            
                            <ProgressBar Progress="{Binding PaidProgress}" 
                                         ProgressColor="#4CAF50"/>

                            <HorizontalStackLayout Spacing="10">
                                <Label Text="📦 Отгрузка:" FontSize="12"/>
                                <Label Text="{Binding ShippedPercent, StringFormat='{0:F0}%'}" 
                                       FontSize="12" 
                                       FontAttributes="Bold"/>
                            </HorizontalStackLayout>
                            
                            <ProgressBar Progress="{Binding ShippedProgress}" 
                                         ProgressColor="#2196F3"/>

                            <!-- Amounts -->
                            <HorizontalStackLayout Spacing="15">
                                <Label Text="{Binding TotalAmount, StringFormat='Сумма: {0:N0}'}" 
                                       FontSize="12"/>
                                <Label Text="{Binding BalanceDue, StringFormat='Долг: {0:N0}'}" 
                                       FontSize="12" 
                                       TextColor="Red"
                                       IsVisible="{Binding HasDebt}"/>
                            </HorizontalStackLayout>

                            <!-- Date -->
                            <Label Text="{Binding CreatedAt, StringFormat='Создан: {0:dd.MM.yyyy HH:mm}'}" 
                                   FontSize="11" 
                                   TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
