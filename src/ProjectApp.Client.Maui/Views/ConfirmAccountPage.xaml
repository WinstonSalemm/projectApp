<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.Client.Maui.Views.ConfirmAccountPage"
             BackgroundColor="{DynamicResource Color.Background}"
             Title="Подтверждение"
             NavigationPage.HasNavigationBar="False">
  <Grid RowDefinitions="*,Auto,Auto" Padding="24">
    <VerticalStackLayout Grid.Row="0" Spacing="24" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
      <Label x:Name="TitleLabel"
             Text="ВЫ ТОЧНО"
             FontAttributes="Bold"
             FontSize="28"
             TextColor="{DynamicResource Color.Text.Primary}"
             HorizontalTextAlignment="Center"/>
      <Label x:Name="SubtitleLabel"
             Text="..."
             FontSize="22"
             TextColor="{DynamicResource Color.Text.Secondary}"
             HorizontalTextAlignment="Center"/>
    </VerticalStackLayout>

    <Button Grid.Row="1"
            Text="ДА"
            Style="{StaticResource ActionButton}"
            FontAttributes="Bold"
            HeightRequest="64"
            Margin="0,24,0,12"
            Clicked="OnYesClicked"/>

    <Button Grid.Row="2"
            Text="НЕТ"
            Style="{StaticResource Button.Secondary}"
            HeightRequest="64"
            Clicked="OnNoClicked"/>
  </Grid>
</ContentPage>
