<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.Client.Maui.Views.FinancesMenuPage"
             Title="Финансы">
  
  <ScrollView>
    <VerticalStackLayout Padding="20" Spacing="20">
      
      <!-- Header -->
      <Label Text="💰 Финансовый контроль" 
             FontSize="28" 
             FontAttributes="Bold" 
             HorizontalOptions="Center"
             TextColor="{DynamicResource Color.Text.Primary}" />
      
      <Label Text="Управление кассами, транзакциями и расходами" 
             FontSize="15" 
             TextColor="{DynamicResource Color.Text.Secondary}" 
             HorizontalOptions="Center" 
             Margin="0,0,0,16" />
      
      <!-- Cash Summary Card -->
      <Border StrokeThickness="0"
              BackgroundColor="{DynamicResource Color.Primary}"
              StrokeShape="RoundRectangle 12"
              Padding="24"
              Opacity="0.95">
        <VerticalStackLayout Spacing="8">
          <Label Text="💳 ОСТАТКИ В КАССАХ" 
                 FontSize="15" 
                 FontAttributes="Bold"
                 TextColor="White" />
          <Label Text="Загрузка..." 
                 x:Name="TotalBalanceLabel"
                 FontSize="36" 
                 FontAttributes="Bold" 
                 TextColor="White" />
          <Label Text="Обновлено только что" 
                 FontSize="13" 
                 TextColor="White"
                 Opacity="0.8" />
        </VerticalStackLayout>
      </Border>
      
      <!-- Menu Items -->
      <Label Text="УПРАВЛЕНИЕ" 
             FontSize="14" 
             FontAttributes="Bold" 
             TextColor="{DynamicResource Color.Text.Secondary}" 
             Margin="0,8,0,0" />
      
      <!-- Cashboxes -->
      <Border StrokeThickness="1" 
              Stroke="{DynamicResource Color.Border}"
              BackgroundColor="{DynamicResource Color.Surface}"
              StrokeShape="RoundRectangle 10"
              Padding="18">
        <Border.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnCashboxesClicked" />
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="💼" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="Кассы и счета" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="{DynamicResource Color.Text.Primary}" />
            <Label Text="Офис, склады, банковские счета" 
                   FontSize="14" 
                   TextColor="{DynamicResource Color.Text.Secondary}" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="{DynamicResource Color.Text.Secondary}" 
                 VerticalOptions="Center" />
        </Grid>
      </Border>
      
      <!-- Transactions -->
      <Border StrokeThickness="1" 
              Stroke="{DynamicResource Color.Border}"
              BackgroundColor="{DynamicResource Color.Surface}"
              StrokeShape="RoundRectangle 10"
              Padding="18">
        <Border.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnTransactionsClicked" />
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="🔄" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="Транзакции" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="{DynamicResource Color.Text.Primary}" />
            <Label Text="Движение денег между кассами" 
                   FontSize="14" 
                   TextColor="{DynamicResource Color.Text.Secondary}" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="{DynamicResource Color.Text.Secondary}" 
                 VerticalOptions="Center" />
        </Grid>
      </Border>
      
      <!-- Operating Expenses -->
      <Border StrokeThickness="1" 
              Stroke="{DynamicResource Color.Border}"
              BackgroundColor="{DynamicResource Color.Surface}"
              StrokeShape="RoundRectangle 10"
              Padding="18">
        <Border.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnExpensesClicked" />
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="📊" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="Операционные расходы" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="{DynamicResource Color.Text.Primary}" />
            <Label Text="Зарплаты, аренда, таможня, налоги" 
                   FontSize="14" 
                   TextColor="{DynamicResource Color.Text.Secondary}" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="{DynamicResource Color.Text.Secondary}" 
                 VerticalOptions="Center" />
        </Grid>
      </Border>
      
      <!-- Reports Section -->
      <Label Text="ОТЧЕТЫ" 
             FontSize="14" 
             FontAttributes="Bold" 
             TextColor="{DynamicResource Color.Text.Secondary}" 
             Margin="0,16,0,0" />
      
      <!-- P&L Report -->
      <Border StrokeThickness="1" 
              Stroke="{DynamicResource Color.Border}"
              BackgroundColor="{DynamicResource Color.Surface}"
              StrokeShape="RoundRectangle 10"
              Padding="18"
              Opacity="0.9">
        <Border.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnPLReportClicked" />
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="📈" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="P&amp;L отчет" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="{DynamicResource Color.Text.Primary}" />
            <Label Text="Прибыли и убытки" 
                   FontSize="14" 
                   TextColor="{DynamicResource Color.Text.Secondary}" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="{DynamicResource Color.Text.Secondary}" 
                 VerticalOptions="Center" />
        </Grid>
      </Border>
      
      <!-- Cash Flow Report -->
      <Border StrokeThickness="1" 
              Stroke="{DynamicResource Color.Border}"
              BackgroundColor="{DynamicResource Color.Surface}"
              StrokeShape="RoundRectangle 10"
              Padding="18"
              Opacity="0.9">
        <Border.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnCashFlowClicked" />
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="💸" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="Cash Flow" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="{DynamicResource Color.Text.Primary}" />
            <Label Text="Движение денежных средств" 
                   FontSize="14" 
                   TextColor="{DynamicResource Color.Text.Secondary}" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="{DynamicResource Color.Text.Secondary}" 
                 VerticalOptions="Center" />
        </Grid>
      </Border>
      
      <!-- Cash Collection (ТОЛЬКО для OWNER) -->
      <Border x:Name="CashCollectionFrame"
              StrokeThickness="2" 
              Stroke="#FF9800"
              BackgroundColor="#FFF3E0"
              StrokeShape="RoundRectangle 10"
              Padding="18">
        <Border.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnCashCollectionClicked" />
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="💵" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="К инкассации" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="#E65100" />
            <Label Text="Серые деньги (нал без чека)" 
                   FontSize="14" 
                   TextColor="#F57C00" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="#FF9800" 
                 VerticalOptions="Center" />
        </Grid>
      </Border>
      
    </VerticalStackLayout>
  </ScrollView>
  
</ContentPage>
