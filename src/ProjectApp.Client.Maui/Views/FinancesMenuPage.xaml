<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.Client.Maui.Views.FinancesMenuPage"
             Title="Финансы">
  
  <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="16">
      
      <!-- Header -->
      <Label Text="💰 Финансовый контроль" 
             FontSize="28" 
             FontAttributes="Bold" 
             HorizontalOptions="Center" />
      
      <Label Text="Управление кассами, транзакциями и расходами" 
             FontSize="14" 
             TextColor="Gray" 
             HorizontalOptions="Center" 
             Margin="0,0,0,16" />
      
      <!-- Cash Summary Card -->
      <Frame Padding="20" 
             CornerRadius="12" 
             BackgroundColor="#E3F2FD" 
             HasShadow="True">
        <VerticalStackLayout Spacing="8">
          <Label Text="💳 ОСТАТКИ В КАССАХ" 
                 FontSize="16" 
                 FontAttributes="Bold"
                 TextColor="#1976D2" />
          <Label Text="Загрузка..." 
                 x:Name="TotalBalanceLabel"
                 FontSize="32" 
                 FontAttributes="Bold" 
                 TextColor="#1976D2" />
          <Label Text="Обновлено только что" 
                 FontSize="12" 
                 TextColor="Gray" />
        </VerticalStackLayout>
      </Frame>
      
      <!-- Menu Items -->
      <Label Text="УПРАВЛЕНИЕ" 
             FontSize="14" 
             FontAttributes="Bold" 
             TextColor="Gray" 
             Margin="0,8,0,0" />
      
      <!-- Cashboxes -->
      <Frame Padding="16" 
             Margin="0,4,0,0" 
             CornerRadius="8"
             HasShadow="True">
        <Frame.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnCashboxesClicked" />
        </Frame.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="💼" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="Кассы и счета" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            <Label Text="Офис, склады, банковские счета" 
                   FontSize="12" 
                   TextColor="Gray" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="Gray" 
                 VerticalOptions="Center" />
        </Grid>
      </Frame>
      
      <!-- Transactions -->
      <Frame Padding="16" 
             Margin="0,4,0,0" 
             CornerRadius="8"
             HasShadow="True">
        <Frame.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnTransactionsClicked" />
        </Frame.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="🔄" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="Транзакции" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            <Label Text="Движение денег между кассами" 
                   FontSize="12" 
                   TextColor="Gray" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="Gray" 
                 VerticalOptions="Center" />
        </Grid>
      </Frame>
      
      <!-- Operating Expenses -->
      <Frame Padding="16" 
             Margin="0,4,0,0" 
             CornerRadius="8"
             HasShadow="True">
        <Frame.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnExpensesClicked" />
        </Frame.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="📊" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="Операционные расходы" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            <Label Text="Зарплаты, аренда, таможня, налоги" 
                   FontSize="12" 
                   TextColor="Gray" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="Gray" 
                 VerticalOptions="Center" />
        </Grid>
      </Frame>
      
      <!-- Reports Section -->
      <Label Text="ОТЧЕТЫ" 
             FontSize="14" 
             FontAttributes="Bold" 
             TextColor="Gray" 
             Margin="0,16,0,0" />
      
      <!-- P&L Report -->
      <Frame Padding="16" 
             Margin="0,4,0,0" 
             CornerRadius="8"
             BackgroundColor="#F5F5F5"
             HasShadow="True">
        <Frame.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnPLReportClicked" />
        </Frame.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="📈" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="P&L отчет" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            <Label Text="Прибыли и убытки" 
                   FontSize="12" 
                   TextColor="Gray" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="Gray" 
                 VerticalOptions="Center" />
        </Grid>
      </Frame>
      
      <!-- Cash Flow Report -->
      <Frame Padding="16" 
             Margin="0,4,0,0" 
             CornerRadius="8"
             BackgroundColor="#F5F5F5"
             HasShadow="True">
        <Frame.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnCashFlowClicked" />
        </Frame.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto">
          <Label Grid.Column="0" 
                 Text="💸" 
                 FontSize="32" 
                 VerticalOptions="Center" />
          <VerticalStackLayout Grid.Column="1" Margin="16,0,0,0" VerticalOptions="Center">
            <Label Text="Cash Flow" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            <Label Text="Движение денежных средств" 
                   FontSize="12" 
                   TextColor="Gray" />
          </VerticalStackLayout>
          <Label Grid.Column="2" 
                 Text="›" 
                 FontSize="32" 
                 TextColor="Gray" 
                 VerticalOptions="Center" />
        </Grid>
      </Frame>
      
    </VerticalStackLayout>
  </ScrollView>
  
</ContentPage>
