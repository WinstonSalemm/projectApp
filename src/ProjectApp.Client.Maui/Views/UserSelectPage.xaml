<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ProjectApp.Client.Maui.ViewModels"
             x:Class="ProjectApp.Client.Maui.Views.UserSelectPage"
             x:DataType="viewModels:UserSelectViewModel"
             Title="Выбор менеджера">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Настройки" Clicked="OnSettingsClicked" />
  </ContentPage.ToolbarItems>
  <ScrollView VerticalScrollBarVisibility="Always">
    <VerticalStackLayout Padding="24" Spacing="24">
      <!-- POJ PRO Branding -->
      <VerticalStackLayout Spacing="8" HorizontalOptions="Center" Margin="0,20,0,0">
        <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
          <Frame Padding="12,6" CornerRadius="8" BackgroundColor="{DynamicResource Color.Primary}" HasShadow="True">
            <Label Text="POJ" FontSize="32" FontAttributes="Bold" TextColor="{DynamicResource Color.OnPrimary}" />
          </Frame>
          <Label Text="PRO" FontSize="36" FontAttributes="Bold" TextColor="{DynamicResource Color.Primary}" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <Label Text="Профессиональная система управления" 
               FontSize="12" 
               TextColor="{DynamicResource Color.Text.Secondary}" 
               HorizontalOptions="Center"/>
      </VerticalStackLayout>
      
      <Label Text="Кто работает за кассой?" FontAttributes="Bold" FontSize="22" Margin="0,16,0,0"/>

      <Grid ColumnDefinitions="*,*"
            RowDefinitions="Auto,Auto,Auto,Auto"
            ColumnSpacing="16"
            RowSpacing="16">
        <Button Text="Лилия" Style="{StaticResource Button.Primary}"
                Grid.Row="0" Grid.Column="0"
                Command="{Binding LoginManagerCommand}"
                CommandParameter="liliya"
                HeightRequest="64"
                FontSize="18" />
        <Button Text="Тимур" Style="{StaticResource Button.Primary}"
                Grid.Row="0" Grid.Column="1"
                Command="{Binding LoginManagerCommand}"
                CommandParameter="timur"
                HeightRequest="64"
                FontSize="18" />

        <Button Text="Валерий" Style="{StaticResource Button.Primary}"
                Grid.Row="1" Grid.Column="0"
                Command="{Binding LoginManagerCommand}"
                CommandParameter="valeriy"
                HeightRequest="64"
                FontSize="18" />
        <Button Text="Альберт" Style="{StaticResource Button.Primary}"
                Grid.Row="1" Grid.Column="1"
                Command="{Binding LoginManagerCommand}"
                CommandParameter="albert"
                HeightRequest="64"
                FontSize="18" />

        <Button Text="Расим" Style="{StaticResource Button.Primary}"
                Grid.Row="2" Grid.Column="0"
                Command="{Binding LoginManagerCommand}"
                CommandParameter="rasim"
                HeightRequest="64"
                FontSize="18" />
        <Button Text="Алишер" Style="{StaticResource Button.Primary}"
                Grid.Row="2" Grid.Column="1"
                Command="{Binding LoginManagerCommand}"
                CommandParameter="alisher"
                HeightRequest="64"
                FontSize="18" />

        <Button Text="Магазин" Style="{StaticResource Button.Primary}"
                Grid.Row="3" Grid.Column="0"
                Command="{Binding LoginShopCommand}"
                HeightRequest="84"
                FontSize="22" />
        <Button Text="Администратор" Style="{StaticResource Button.Primary}"
                Grid.Row="3" Grid.Column="1"
                Command="{Binding LoginAdminCommand}"
                HeightRequest="84"
                FontSize="22" />
      </Grid>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>