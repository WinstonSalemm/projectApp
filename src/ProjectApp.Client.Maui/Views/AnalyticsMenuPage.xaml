<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.Client.Maui.Views.AnalyticsMenuPage"
             Title="Аналитика"
             BackgroundColor="{DynamicResource Color.Background}">
  
  <ScrollView Padding="16">
    <VerticalStackLayout Spacing="16">
      <Label Text="📊 Аналитика" FontSize="28" FontAttributes="Bold" Margin="0,8,0,24"/>
      
      <!-- Финансовая аналитика -->
      <Border StrokeThickness="0" BackgroundColor="{DynamicResource Color.Primary}" Padding="20" StrokeShape="RoundRectangle 12">
        <Border.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnFinancesTapped"/>
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
          <Label Grid.Column="0" Text="💰" FontSize="32"/>
          <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
            <Label Text="Финансовая аналитика" FontSize="18" FontAttributes="Bold" TextColor="White"/>
            <Label Text="Выручка, прибыль, маржинальность" FontSize="14" TextColor="White" Opacity="0.8"/>
          </VerticalStackLayout>
          <Label Grid.Column="2" Text="›" FontSize="32" TextColor="White" VerticalOptions="Center"/>
        </Grid>
      </Border>
      
      <!-- Аналитика по менеджерам -->
      <Border StrokeThickness="0" BackgroundColor="{DynamicResource Color.Success}" Padding="20" StrokeShape="RoundRectangle 12">
        <Border.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnManagersTapped"/>
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
          <Label Grid.Column="0" Text="👥" FontSize="32"/>
          <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
            <Label Text="Аналитика по менеджерам" FontSize="18" FontAttributes="Bold" TextColor="White"/>
            <Label Text="Обороты, клиенты, график продаж" FontSize="14" TextColor="White" Opacity="0.8"/>
          </VerticalStackLayout>
          <Label Grid.Column="2" Text="›" FontSize="32" TextColor="White" VerticalOptions="Center"/>
        </Grid>
      </Border>
      
      <!-- Управление себестоимостью -->
      <Border StrokeThickness="0" BackgroundColor="{DynamicResource Color.Warning}" Padding="20" StrokeShape="RoundRectangle 12">
        <Border.GestureRecognizers>
          <TapGestureRecognizer Tapped="OnProductCostsTapped"/>
        </Border.GestureRecognizers>
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
          <Label Grid.Column="0" Text="📦" FontSize="32"/>
          <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
            <Label Text="Управление себестоимостью" FontSize="18" FontAttributes="Bold" TextColor="White"/>
            <Label Text="Себестоимость товаров, маржа" FontSize="14" TextColor="White" Opacity="0.8"/>
          </VerticalStackLayout>
          <Label Grid.Column="2" Text="›" FontSize="32" TextColor="White" VerticalOptions="Center"/>
        </Grid>
      </Border>
      
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
