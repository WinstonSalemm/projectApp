<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.Client.Maui.Views.SettingsPage"
             Title="Настройки">
  <ContentPage.Content>
    <ScrollView>
      <VerticalStackLayout Padding="16" Spacing="12">
        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
          <Label Text="Использовать API" VerticalOptions="Center"/>
          <Switch Grid.Column="1" IsToggled="{Binding UseApi, Mode=TwoWay}"/>
        </Grid>

        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
          <Label Text="API Base URL" VerticalOptions="Center"/>
          <Entry Grid.Column="1" Placeholder="http://localhost:5028" Text="{Binding ApiBaseUrl, Mode=TwoWay}"/>
        </Grid>

        <Button Text="Сохранить" Command="{Binding SaveCommand}"/>
      </VerticalStackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
