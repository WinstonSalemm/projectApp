<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProjectApp.Client.Maui.ViewModels"
             xmlns:services="clr-namespace:ProjectApp.Client.Maui.Services"
             x:Class="ProjectApp.Client.Maui.Views.SupplyEditPage"
             Title="Редактирование поставки"
             x:DataType="vm:SupplyEditViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Добавить товар" 
                     Clicked="OnAddProductClicked"
                     IconImageSource="add.png"/>
        <ToolbarItem Text="🔄 Пересчитать" 
                     Clicked="OnRecalculateClicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            
            <!-- Заголовок поставки -->
            <Frame BorderColor="LightGray" CornerRadius="8" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding Supply.Code, StringFormat='Поставка: {0}', FallbackValue='Поставка: Загрузка...'}" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Supply.RegisterType, StringFormat='Регистр: {0}', FallbackValue='Регистр: ...'}" 
                           FontSize="14" 
                           TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Список товаров в поставке -->
            <Label Text="Товары в поставке:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
            
            <CollectionView ItemsSource="{Binding SupplyItems}" SelectionMode="None" HeightRequest="300">
                <CollectionView.EmptyView>
                    <Label Text="Нет товаров. Нажмите '+' чтобы добавить." 
                           TextColor="Gray" 
                           HorizontalTextAlignment="Center"
                           Margin="0,20,0,0"/>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="services:SupplyItemDto">
                        <Frame Margin="0,5" Padding="10" BorderColor="LightGray">
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                
                                <Button Grid.Row="0" Grid.Column="1"
                                        Text="🗑️"
                                        Clicked="OnRemoveProductClicked"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#e74c3c"
                                        TextColor="White"
                                        WidthRequest="40"
                                        HeightRequest="40"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="{Binding Sku, StringFormat='SKU: {0}'}"
                                       FontSize="12"
                                       TextColor="Gray"/>
                                
                                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                      ColumnDefinitions="*,*,*"
                                      Margin="0,5,0,0">
                                    <Label Grid.Column="0"
                                           Text="{Binding Quantity, StringFormat='Кол-во: {0}'}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding PriceRub, StringFormat='Цена: {0:F2} ₽'}"
                                           FontSize="12"/>
                                    <Label Grid.Column="2"
                                           Text="{Binding Weight, StringFormat='Вес: {0:F2} кг'}"
                                           FontSize="12"/>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Секция расчета себестоимости -->
            <Frame BackgroundColor="#3498db" Padding="15" Margin="0,20,0,0">
                <VerticalStackLayout Spacing="5">
                    <Label Text="💰 РАСЧЕТ СЕБЕСТОИМОСТИ" 
                           TextColor="White" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="#3498db" Padding="15" Margin="0,0,0,0">
                <VerticalStackLayout Spacing="10">
                    <!-- Общая информация -->
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" 
                               Text="Товаров в расчете:" 
                               FontSize="14"/>
                        <Label Grid.Column="1" 
                               Text="{Binding CostItemsCount}" 
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#2980b9"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1" Color="LightGray"/>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" 
                               Text="ИТОГО СЕБЕСТОИМОСТЬ:" 
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Grid.Column="1" 
                               Text="{Binding TotalCost, StringFormat='{0:N0} UZS'}" 
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#e74c3c"/>
                    </Grid>

                    <Label Text="Детализация расчета:" FontAttributes="Bold" FontSize="16" />

                    <!-- Таблица с формулами -->
                    <ScrollView Orientation="Both" HeightRequest="250">
                        <VerticalStackLayout>
                            <!-- Заголовки -->
                            <Grid ColumnDefinitions="2*,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" Padding="5" BackgroundColor="#ecf0f1">
                                <Label Text="#" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="Товар" FontAttributes="Bold" />
                                <Label Grid.Column="2" Text="Цена ₽" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                <Label Grid.Column="3" Text="Курс" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                <Label Grid.Column="4" Text="Цена UZS" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                <Label Grid.Column="5" Text="Таможня" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                <Label Grid.Column="6" Text="Логистика" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                <Label Grid.Column="7" Text="Склад" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                <Label Grid.Column="8" Text="Прочие" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                <Label Grid.Column="9" Text="Себес / итого" FontAttributes="Bold" HorizontalTextAlignment="End" />
                            </Grid>

                            <CollectionView ItemsSource="{Binding CostItems}" SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="vm:BatchCostItemDto">
                                        <Grid ColumnDefinitions="2*,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" Padding="5">
                                            <Label Text="{Binding RowNumber}" />
                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="{Binding ProductName}" FontAttributes="Bold" />
                                                <Label Text="{Binding Quantity, StringFormat='Кол-во: {0}'}" FontSize="12" TextColor="Gray" />
                                            </VerticalStackLayout>
                                            <Label Grid.Column="2" Text="{Binding PriceRub, StringFormat='{0:F2}'}" HorizontalTextAlignment="End" />
                                            <Label Grid.Column="3" Text="{Binding ExchangeRate, StringFormat='{0:F2}'}" HorizontalTextAlignment="End" />
                                            <Label Grid.Column="4" Text="{Binding PriceSom, StringFormat='{0:N0}'}" HorizontalTextAlignment="End" />
                                            <Label Grid.Column="5" Text="{Binding CustomsAmount, StringFormat='{0:N0}'}" HorizontalTextAlignment="End" />
                                            <Label Grid.Column="6" Text="{Binding LogisticsAmount, StringFormat='{0:N0}'}" HorizontalTextAlignment="End">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding LogisticsAmount, StringFormat='{0:N0}'}" />
                                                        <Span Text="{Binding LogisticsPercent, StringFormat=' ({0:F1}%)'}" FontSize="12" TextColor="Gray" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <Label Grid.Column="7" HorizontalTextAlignment="End">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding WarehouseAmount, StringFormat='{0:N0}'}" />
                                                        <Span Text="{Binding WarehousePercent, StringFormat=' ({0:F1}%)'}" FontSize="12" TextColor="Gray" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            <VerticalStackLayout Grid.Column="8" Spacing="2" HorizontalOptions="End">
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Декл: {Binding DeclarationAmount, StringFormat='{0:N0}'}" />
                                                            <Span Text="{Binding DeclarationPercent, StringFormat=' ({0:F1}%)'}" FontSize="12" TextColor="Gray" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Сертиф: {Binding CertificationAmount, StringFormat='{0:N0}'}" />
                                                            <Span Text="{Binding CertificationPercent, StringFormat=' ({0:F1}%)'}" FontSize="12" TextColor="Gray" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="МЧС: {Binding MchsAmount, StringFormat='{0:N0}'}" />
                                                            <Span Text="{Binding MchsPercent, StringFormat=' ({0:F1}%)'}" FontSize="12" TextColor="Gray" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label>
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Откл: {Binding DeviationAmount, StringFormat='{0:N0}'}" />
                                                            <Span Text="{Binding DeviationPercent, StringFormat=' ({0:F1}%)'}" FontSize="12" TextColor="Gray" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label Text="Погрузка: {Binding ShippingAmount, StringFormat='{0:N0}'}" FontSize="12" TextColor="Gray" HorizontalTextAlignment="End" />
                                            </VerticalStackLayout>
                                            <VerticalStackLayout Grid.Column="9" Spacing="2" HorizontalOptions="End">
                                                <Label Text="{Binding UnitCost, StringFormat='{0:N0} UZS'}" FontAttributes="Bold" HorizontalTextAlignment="End" />
                                                <Label Text="× {Binding Quantity}" FontSize="12" TextColor="Gray" HorizontalTextAlignment="End" />
                                                <Label Text="= {Binding TotalCost, StringFormat='{0:N0} UZS'}" FontAttributes="Bold" TextColor="#27ae60" HorizontalTextAlignment="End" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </ScrollView>

                    <Label Text="Формулы: Цена UZS = Цена ₽ × Курс. Процентные статьи считаются от цены в UZS. Фиксированные суммы (таможня/погрузка) распределяются пропорционально доле товара." 
                           FontSize="12" 
                           TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
