<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ProjectApp.Client.Maui.Controls"
             x:Class="ProjectApp.Client.Maui.Controls.EmptyStateView"
             x:Name="Root"
             x:DataType="controls:EmptyStateView">
  <Border Background="{DynamicResource Color.Surface}"
          Stroke="{DynamicResource Color.Border}"
          StrokeThickness="0"
          Padding="{StaticResource Card.Padding}">
    <Border.StrokeShape>
      <RoundRectangle CornerRadius="{StaticResource Radius.20}" />
    </Border.StrokeShape>
    <VerticalStackLayout Spacing="{StaticResource Space.3}"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         BindingContext="{x:Reference Root}">
      <Image Source="{Binding Icon}"
             WidthRequest="96"
             HeightRequest="96"
             Margin="0,8,0,0"
             IsVisible="{Binding HasIcon}" />
      <Label Text="{Binding Title}"
             FontSize="{StaticResource Font.Size.H2}"
             FontAttributes="Bold"
             HorizontalTextAlignment="Center"
             TextColor="{DynamicResource Color.Text.Primary}" />
      <Label Text="{Binding Description}"
             FontSize="{StaticResource Font.Size.Body}"
             HorizontalTextAlignment="Center"
             TextColor="{DynamicResource Color.Text.Secondary}"
             MaxLines="3"
             IsVisible="{Binding HasDescription}" />
      <Button Text="{Binding ActionText}"
              Style="{StaticResource Button.Secondary}"
              Command="{Binding ActionCommand}"
              CommandParameter="{Binding ActionCommandParameter}"
              IsVisible="{Binding HasAction}" />
    </VerticalStackLayout>
  </Border>
</ContentView>
