<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectApp.Client.Maui.Controls.EmptyStateView"
             x:Name="Root">
  <Border Background="{DynamicResource Color.Surface}"
          Stroke="{DynamicResource Color.Border}"
          StrokeThickness="0"
          Padding="{StaticResource Card.Padding}">
    <Border.StrokeShape>
      <RoundRectangle CornerRadius="{StaticResource Radius.20}" />
    </Border.StrokeShape>
    <VerticalStackLayout Spacing="{StaticResource Space.3}"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
      <Image Source="{Binding Source={x:Reference Root}, Path=Icon}"
             WidthRequest="96"
             HeightRequest="96"
             Margin="0,8,0,0"
             IsVisible="{Binding Source={x:Reference Root}, Path=HasIcon}" />
      <Label Text="{Binding Source={x:Reference Root}, Path=Title}"
             FontSize="{StaticResource Font.Size.H2}"
             FontAttributes="Bold"
             HorizontalTextAlignment="Center"
             TextColor="{DynamicResource Color.Text.Primary}" />
      <Label Text="{Binding Source={x:Reference Root}, Path=Description}"
             FontSize="{StaticResource Font.Size.Body}"
             HorizontalTextAlignment="Center"
             TextColor="{DynamicResource Color.Text.Secondary}"
             MaxLines="3"
             IsVisible="{Binding Source={x:Reference Root}, Path=HasDescription}" />
      <Button Text="{Binding Source={x:Reference Root}, Path=ActionText}"
              Style="{StaticResource Button.Secondary}"
              Command="{Binding Source={x:Reference Root}, Path=ActionCommand}"
              CommandParameter="{Binding Source={x:Reference Root}, Path=ActionCommandParameter}"
              IsVisible="{Binding Source={x:Reference Root}, Path=HasAction}" />
    </VerticalStackLayout>
  </Border>
</ContentView>
