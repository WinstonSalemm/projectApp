<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- Color tokens (light defaults; overridden at runtime for app theme) -->
  <Color x:Key="Color.Primary">#660000</Color>
  <Color x:Key="Color.OnPrimary">#FFFFFF</Color>
  <Color x:Key="Color.Primary.Muted">#F2E8E8</Color>
  <Color x:Key="Color.Secondary">#660000</Color>
  <Color x:Key="Color.OnSecondary">#FFFFFF</Color>
  <Color x:Key="Color.Accent">#660000</Color>
  <Color x:Key="Color.OnAccent">#FFFFFF</Color>
  <Color x:Key="Color.Background">#FFFFFF</Color>
  <Color x:Key="Color.Surface">#FFFFFF</Color>
  <Color x:Key="Color.Surface.Alt">#F9FAFB</Color>
  <Color x:Key="Color.Surface.Muted">#F3F4F6</Color>
  <Color x:Key="Color.Border">#E5E7EB</Color>
  <Color x:Key="Color.BorderStrong">#9CA3AF</Color>
  <Color x:Key="Color.Outline">#E5E7EB</Color>
  <Color x:Key="Color.Text.Primary">#660000</Color>
  <Color x:Key="Color.Text.Secondary">#7A2C2C</Color>
  <Color x:Key="Color.Text.Tertiary">#B56A6A</Color>
  <Color x:Key="Color.Text.Inverse">#FFFFFF</Color>
  <Color x:Key="Color.Success">#16A249</Color>
  <Color x:Key="Color.Warning">#F59E0B</Color>
  <Color x:Key="Color.Error">#DC2626</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="Brush.Primary" Color="{DynamicResource Color.Primary}" />
  <SolidColorBrush x:Key="Brush.Primary.Muted" Color="{DynamicResource Color.Primary.Muted}" />
  <SolidColorBrush x:Key="Brush.Primary.On" Color="{DynamicResource Color.OnPrimary}" />
  <SolidColorBrush x:Key="Brush.Secondary" Color="{DynamicResource Color.Secondary}" />
  <SolidColorBrush x:Key="Brush.Accent" Color="{DynamicResource Color.Accent}" />
  <SolidColorBrush x:Key="Brush.Accent.On" Color="{DynamicResource Color.OnAccent}" />
  <SolidColorBrush x:Key="Brush.Background" Color="{DynamicResource Color.Background}" />
  <SolidColorBrush x:Key="Brush.Surface" Color="{DynamicResource Color.Surface}" />
  <SolidColorBrush x:Key="Brush.Surface.Alt" Color="{DynamicResource Color.Surface.Alt}" />
  <SolidColorBrush x:Key="Brush.Surface.Muted" Color="{DynamicResource Color.Surface.Muted}" />
  <SolidColorBrush x:Key="Brush.Border" Color="{DynamicResource Color.Border}" />
  <SolidColorBrush x:Key="Brush.Border.Strong" Color="{DynamicResource Color.BorderStrong}" />
  <SolidColorBrush x:Key="Brush.Text.Primary" Color="{DynamicResource Color.Text.Primary}" />
  <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{DynamicResource Color.Text.Secondary}" />
  <SolidColorBrush x:Key="Brush.Text.Tertiary" Color="{DynamicResource Color.Text.Tertiary}" />
  <SolidColorBrush x:Key="Brush.Text.Inverse" Color="{DynamicResource Color.Text.Inverse}" />
  <SolidColorBrush x:Key="Brush.Success" Color="{DynamicResource Color.Success}" />
  <SolidColorBrush x:Key="Brush.Warning" Color="{DynamicResource Color.Warning}" />
  <SolidColorBrush x:Key="Brush.Error" Color="{DynamicResource Color.Error}" />

  <!-- Typography -->
  <x:String x:Key="FontFamily.Primary">InterRegular</x:String>
  <x:String x:Key="FontFamily.Primary.SemiBold">InterSemiBold</x:String>
  <x:String x:Key="FontFamily.Primary.Bold">InterBold</x:String>

  <x:Double x:Key="Font.Size.Display">34</x:Double>
  <x:Double x:Key="Font.Size.H1">28</x:Double>
  <x:Double x:Key="Font.Size.H2">24</x:Double>
  <x:Double x:Key="Font.Size.H3">20</x:Double>
  <x:Double x:Key="Font.Size.Body.Large">18</x:Double>
  <x:Double x:Key="Font.Size.Body">16</x:Double>
  <x:Double x:Key="Font.Size.Body.Small">14</x:Double>
  <x:Double x:Key="Font.Size.Caption">12</x:Double>
  <x:Double x:Key="Font.Size.Overline">11</x:Double>

  <!-- Spacing scale -->
  <x:Double x:Key="Space.0">0</x:Double>
  <x:Double x:Key="Space.1">4</x:Double>
  <x:Double x:Key="Space.2">8</x:Double>
  <x:Double x:Key="Space.3">12</x:Double>
  <x:Double x:Key="Space.4">16</x:Double>
  <x:Double x:Key="Space.5">20</x:Double>
  <x:Double x:Key="Space.6">24</x:Double>
  <x:Double x:Key="Space.7">28</x:Double>
  <x:Double x:Key="Space.8">32</x:Double>
  <x:Double x:Key="Space.9">40</x:Double>
  <x:Double x:Key="Space.10">48</x:Double>

  <!-- Radii -->
  <x:Double x:Key="Radius.4">4</x:Double>
  <x:Double x:Key="Radius.6">6</x:Double>
  <x:Double x:Key="Radius.8">8</x:Double>
  <x:Double x:Key="Radius.10">10</x:Double>
  <x:Double x:Key="Radius.12">12</x:Double>
  <x:Double x:Key="Radius.16">16</x:Double>
  <x:Double x:Key="Radius.20">20</x:Double>
  <x:Double x:Key="Radius.24">24</x:Double>

  <!-- Layout metrics -->
  <x:Double x:Key="Breakpoint.Compact">800</x:Double>
  <x:Double x:Key="Breakpoint.Medium">1200</x:Double>

  <OnIdiom x:Key="Page.Padding" x:TypeArguments="Thickness"
           Phone="20,20"
           Tablet="32,28"
           Desktop="40,32" />
  <Thickness x:Key="Section.Padding">0,0,0,16</Thickness>
  <Thickness x:Key="Card.Padding">24,20</Thickness>
  <Thickness x:Key="Card.Padding.Dense">20,16</Thickness>
  <Thickness x:Key="Control.Padding.Primary">20,14</Thickness>
  <Thickness x:Key="Control.Padding.Secondary">16,12</Thickness>

  <OnIdiom x:Key="Control.Height" x:TypeArguments="x:Double"
           Phone="52"
           Tablet="60"
           Desktop="44" />

  <!-- Shadows / Elevation -->
  <Shadow x:Key="Shadow.Level1" Offset="0,6" Radius="18" Opacity="0.20">
    <Shadow.Brush>
      <AppThemeBinding Light="{StaticResource Palette.Shadow.Light}"
                       Dark="{StaticResource Palette.Shadow.Dark}" />
    </Shadow.Brush>
  </Shadow>
  <Shadow x:Key="Shadow.Level2" Offset="0,12" Radius="28" Opacity="0.28">
    <Shadow.Brush>
      <AppThemeBinding Light="{StaticResource Palette.Shadow.Light}"
                       Dark="{StaticResource Palette.Shadow.Dark}" />
    </Shadow.Brush>
  </Shadow>

  <!-- Misc tokens -->
</ResourceDictionary>


