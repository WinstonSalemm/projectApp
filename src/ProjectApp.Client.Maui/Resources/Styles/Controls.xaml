<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:beh="clr-namespace:ProjectApp.Client.Maui.Behaviors">

  <!-- Button foundations -->
  <Style x:Key="Button.Base" TargetType="Button">
    <Setter Property="FontFamily" Value="{StaticResource FontFamily.Inter}" />
    <Setter Property="CornerRadius" Value="{StaticResource Radius.12}" />
    <Setter Property="Padding" Value="{StaticResource Control.Padding.Primary}" />
    <Setter Property="HeightRequest" Value="{StaticResource Control.Height}" />
    <Setter Property="HorizontalOptions" Value="Fill" />
    <Setter Property="VisualStateManager.VisualStateGroups">
      <VisualStateGroupList>
        <VisualStateGroup x:Name="CommonStates">
          <VisualState x:Name="Normal" />
          <VisualState x:Name="PointerOver" />
          <VisualState x:Name="Pressed" />
          <VisualState x:Name="Disabled">
            <VisualState.Setters>
              <Setter Property="Opacity" Value="0.5" />
              <Setter Property="IsEnabled" Value="False" />
            </VisualState.Setters>
          </VisualState>
        </VisualStateGroup>
      </VisualStateGroupList>
    </Setter>
  </Style>

  <Style x:Key="Button.Primary" TargetType="Button" BasedOn="{StaticResource Button.Base}">
    <Setter Property="BackgroundColor" Value="{DynamicResource Color.Primary}" />
    <Setter Property="TextColor" Value="{DynamicResource Color.OnPrimary}" />
    <Setter Property="BorderColor" Value="{DynamicResource Color.Primary}" />
    <Setter Property="BorderWidth" Value="0" />
    <Setter Property="beh:PointerCursor.IsEnabled" Value="True" />
    <Setter Property="VisualStateManager.VisualStateGroups">
      <VisualStateGroupList>
        <VisualStateGroup x:Name="CommonStates">
          <VisualState x:Name="Normal" />
          <VisualState x:Name="PointerOver">
            <VisualState.Setters>
              <Setter Property="BackgroundColor" Value="{DynamicResource Color.Primary.Muted}" />
              <Setter Property="BorderColor" Value="{DynamicResource Color.Primary}" />
            </VisualState.Setters>
          </VisualState>
          <VisualState x:Name="Pressed">
            <VisualState.Setters>
              <Setter Property="BackgroundColor" Value="{DynamicResource Color.Accent}" />
              <Setter Property="BorderColor" Value="{DynamicResource Color.Accent}" />
            </VisualState.Setters>
          </VisualState>
          <VisualState x:Name="Disabled">
            <VisualState.Setters>
              <Setter Property="Opacity" Value="0.5" />
            </VisualState.Setters>
          </VisualState>
        </VisualStateGroup>
      </VisualStateGroupList>
    </Setter>
  </Style>

  <Style x:Key="Button.Secondary" TargetType="Button" BasedOn="{StaticResource Button.Base}">
    <Setter Property="BackgroundColor" Value="{DynamicResource Color.Primary.Muted}" />
    <Setter Property="TextColor" Value="{DynamicResource Color.Primary}" />
    <Setter Property="BorderColor" Value="{DynamicResource Color.Primary}" />
    <Setter Property="BorderWidth" Value="1" />
    <Setter Property="beh:PointerCursor.IsEnabled" Value="True" />
  </Style>

  <Style x:Key="Button.Tertiary" TargetType="Button" BasedOn="{StaticResource Button.Base}">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{DynamicResource Color.Text.Secondary}" />
    <Setter Property="BorderColor" Value="Transparent" />
    <Setter Property="beh:PointerCursor.IsEnabled" Value="True" />
    <Setter Property="Padding" Value="{StaticResource Control.Padding.Secondary}" />
  </Style>

  <Style x:Key="Button.Destructive" TargetType="Button" BasedOn="{StaticResource Button.Base}">
    <Setter Property="BackgroundColor" Value="{DynamicResource Color.Error}" />
    <Setter Property="TextColor" Value="{DynamicResource Color.OnPrimary}" />
    <Setter Property="BorderColor" Value="{DynamicResource Color.Error}" />
    <Setter Property="beh:PointerCursor.IsEnabled" Value="True" />
  </Style>

  <!-- Default button uses primary -->
  <Style TargetType="Button" BasedOn="{StaticResource Button.Primary}" />

  <!-- Inputs -->
  <Style x:Key="Input.Base" TargetType="View">
    <Setter Property="Margin" Value="0" />
  </Style>

  <Style TargetType="Entry" BasedOn="{StaticResource Input.Base}">
    <Setter Property="FontFamily" Value="{StaticResource FontFamily.Inter}" />
    <Setter Property="BackgroundColor" Value="{DynamicResource Color.Surface.Muted}" />
    <Setter Property="TextColor" Value="{DynamicResource Color.Text.Primary}" />
    <Setter Property="PlaceholderColor" Value="{DynamicResource Color.Text.Tertiary}" />
    <Setter Property="HeightRequest" Value="{StaticResource Control.Height}" />
  </Style>

  <Style TargetType="Editor" BasedOn="{StaticResource Input.Base}">
    <Setter Property="FontFamily" Value="{StaticResource FontFamily.Inter}" />
    <Setter Property="BackgroundColor" Value="{DynamicResource Color.Surface.Muted}" />
    <Setter Property="TextColor" Value="{DynamicResource Color.Text.Primary}" />
    <Setter Property="PlaceholderColor" Value="{DynamicResource Color.Text.Tertiary}" />
    <Setter Property="AutoSize" Value="TextChanges" />
  </Style>

  <Style TargetType="Picker" BasedOn="{StaticResource Input.Base}">
    <Setter Property="FontFamily" Value="{StaticResource FontFamily.Inter}" />
    <Setter Property="BackgroundColor" Value="{DynamicResource Color.Surface.Muted}" />
    <Setter Property="TextColor" Value="{DynamicResource Color.Text.Primary}" />
    <Setter Property="TitleColor" Value="{DynamicResource Color.Text.Secondary}" />
    <Setter Property="HeightRequest" Value="{StaticResource Control.Height}" />
  </Style>

  <Style TargetType="SearchBar">
    <Setter Property="FontFamily" Value="{StaticResource FontFamily.Inter}" />
    <Setter Property="HeightRequest" Value="{StaticResource Control.Height}" />
    <Setter Property="BackgroundColor" Value="{DynamicResource Color.Surface.Muted}" />
    <Setter Property="TextColor" Value="{DynamicResource Color.Text.Primary}" />
    <Setter Property="CancelButtonColor" Value="{DynamicResource Color.Text.Secondary}" />
    <Setter Property="PlaceholderColor" Value="{DynamicResource Color.Text.Tertiary}" />
  </Style>

  <Style TargetType="Switch">
    <Setter Property="OnColor" Value="{DynamicResource Color.Primary}" />
    <Setter Property="ThumbColor" Value="{DynamicResource Color.OnPrimary}" />
  </Style>

  <!-- Badges & chips -->
  <Style x:Key="Chip.Standard" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource Brush.Surface.Muted}" />
    <Setter Property="Stroke" Value="{StaticResource Brush.Border}" />
    <Setter Property="StrokeThickness" Value="1" />
    <Setter Property="StrokeShape">
      <Setter.Value>
        <RoundRectangle CornerRadius="{StaticResource Radius.12}" />
      </Setter.Value>
    </Setter>
    <Setter Property="Padding" Value="12,6" />
  </Style>
</ResourceDictionary>
