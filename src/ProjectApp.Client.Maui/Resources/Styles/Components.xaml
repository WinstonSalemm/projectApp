<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:controls="clr-namespace:ProjectApp.Client.Maui.Controls"
                    xmlns:models="clr-namespace:ProjectApp.Client.Maui.Models">

  <!-- Card container -->
  <Style x:Key="Card.Container" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource Brush.Surface}" />
    <Setter Property="Stroke" Value="{StaticResource Brush.Border}" />
    <Setter Property="StrokeThickness" Value="1" />
    <Setter Property="Padding" Value="{StaticResource Card.Padding}" />
    <Setter Property="Shadow" Value="{StaticResource Shadow.Level1}" />
    <Setter Property="StrokeShape">
      <Setter.Value>
        <RoundRectangle CornerRadius="{StaticResource Radius.20}" />
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="Card.SectionHeader" TargetType="Label">
    <Setter Property="FontAttributes" Value="Bold" />
    <Setter Property="FontSize" Value="{StaticResource Font.Size.H3}" />
    <Setter Property="TextColor" Value="{DynamicResource Color.Text.Primary}" />
    <Setter Property="Margin" Value="0,0,0,12" />
  </Style>

  <!-- List item templates -->
  <DataTemplate x:Key="ListItem.Standard">
    <controls:ListItemView Title="{Binding Title}"
                           Subtitle="{Binding Subtitle}"
                           Meta="{Binding Meta}"
                           Command="{Binding Command}"
                           CommandParameter="{Binding}" />
  </DataTemplate>

  <DataTemplate x:Key="ListItem.Client" x:DataType="models:ClientListItem">
    <controls:ListItemView Title="{Binding Name}"
                           Subtitle="{Binding Phone}"
                           Meta="{Binding OwnerUserName}"
                           Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.OpenDetailCommand}"
                           CommandParameter="{Binding .}" />
  </DataTemplate>

  <!-- Empty state -->
  <DataTemplate x:Key="EmptyState.Template">
    <controls:EmptyStateView Title="{Binding Title}"
                             Description="{Binding Description}"
                             Icon="{Binding Icon}"
                             ActionText="{Binding ActionText}"
                             ActionCommand="{Binding ActionCommand}"
                             ActionCommandParameter="{Binding ActionCommandParameter}" />
  </DataTemplate>
</ResourceDictionary>
