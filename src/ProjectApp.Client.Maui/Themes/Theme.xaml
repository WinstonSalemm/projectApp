<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <!-- Hybrid Hiâ€‘Tech POJ PRO Theme (Material3 + Glass) -->

  <!-- App theme colors -->
  <Color x:Key="Color.Primary.Light">#006241</Color>
  <Color x:Key="Color.Primary.Dark">#28A77E</Color>
  <Color x:Key="Color.PrimaryText.Light">#0F172A</Color>
  <Color x:Key="Color.PrimaryText.Dark">#E5E7EB</Color>
  <Color x:Key="Color.MutedText.Light">#6B7280</Color>
  <Color x:Key="Color.MutedText.Dark">#9CA3AF</Color>
  <Color x:Key="Color.Amber.Light">#F5A623</Color>
  <Color x:Key="Color.Amber.Dark">#F5A623</Color>
  <Color x:Key="Color.Surface.Light">#F3F4F6</Color>
  <Color x:Key="Color.Surface.Dark">#0E0E0E</Color>
  <Color x:Key="Color.Card.Light">#FFFFFF</Color>
  <Color x:Key="Color.Card.Dark">#121212</Color>
  <Color x:Key="Color.Glass.Light">#CCFFFFFF</Color>
  <Color x:Key="Color.Glass.Dark">#33FFFFFF</Color>
  <Color x:Key="Color.Border.Light">#E5E7EB</Color>
  <Color x:Key="Color.Border.Dark">#2B2B2B</Color>
  <Color x:Key="Color.Success.Light">#16A34A</Color>
  <Color x:Key="Color.Success.Dark">#22C55E</Color>
  <Color x:Key="Color.Warning.Light">#D97706</Color>
  <Color x:Key="Color.Warning.Dark">#F59E0B</Color>
  <Color x:Key="Color.Error.Light">#DC2626</Color>
  <Color x:Key="Color.Error.Dark">#EF4444</Color>

  <!-- Radii / Spacing -->
  <x:Double x:Key="Radius.XS">8</x:Double>
  <x:Double x:Key="Radius.SM">12</x:Double>
  <x:Double x:Key="Radius.MD">16</x:Double>
  <x:Double x:Key="Radius.LG">20</x:Double>
  <Thickness x:Key="Padding.Card">16,14</Thickness>
  <Thickness x:Key="Padding.Touch">16,12</Thickness>

  <!-- Typography -->
  <Style TargetType="Label">
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.PrimaryText.Light}, Dark={StaticResource Color.PrimaryText.Dark}}" />
  </Style>
  <Style x:Key="TitleLabel" TargetType="Label">
    <Setter Property="FontAttributes" Value="Bold" />
    <Setter Property="FontSize" Value="22" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.PrimaryText.Light}, Dark={StaticResource Color.PrimaryText.Dark}}" />
  </Style>
  <Style x:Key="SubtitleLabel" TargetType="Label">
    <Setter Property="FontSize" Value="16" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.MutedText.Light}, Dark={StaticResource Color.MutedText.Dark}}" />
  </Style>

  <!-- Pages / Containers -->
  <Style TargetType="ContentPage">
    <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource Color.Surface.Light}, Dark={StaticResource Color.Surface.Dark}}" />
  </Style>
  <Style TargetType="Grid">
    <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource Color.Surface.Light}, Dark={StaticResource Color.Surface.Dark}}" />
  </Style>
  <Style TargetType="Frame" x:Key="Card.Glass">
    <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource Color.Glass.Light}, Dark={StaticResource Color.Glass.Dark}}" />
    <Setter Property="CornerRadius" Value="{StaticResource Radius.MD}" />
    <Setter Property="Padding" Value="{StaticResource Padding.Card}" />
    <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.Border.Light}, Dark={StaticResource Color.Border.Dark}}" />
    <Setter Property="HasShadow" Value="True" />
    <Setter Property="Shadow">
      <Setter.Value>
        <Shadow Brush="#33000000" Opacity="0.6" Offset="0,8" Radius="16" />
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Inputs -->
  <Style TargetType="Entry">
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Card.Light}, Dark={StaticResource Color.Card.Dark}}" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.PrimaryText.Light}, Dark={StaticResource Color.PrimaryText.Dark}}" />
    <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Color.MutedText.Light}, Dark={StaticResource Color.MutedText.Dark}}" />
    <Setter Property="HeightRequest" Value="44" />
  </Style>
  <Style TargetType="Picker">
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Card.Light}, Dark={StaticResource Color.Card.Dark}}" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.PrimaryText.Light}, Dark={StaticResource Color.PrimaryText.Dark}}" />
    <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource Color.MutedText.Light}, Dark={StaticResource Color.MutedText.Dark}}" />
    <Setter Property="HeightRequest" Value="44" />
  </Style>

  <!-- Buttons -->
  <Style TargetType="Button" x:Key="Button.Primary">
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Primary.Light}, Dark={StaticResource Color.Primary.Dark}}" />
    <Setter Property="TextColor" Value="#FFFFFF" />
    <Setter Property="CornerRadius" Value="{StaticResource Radius.MD}" />
    <Setter Property="Padding" Value="{StaticResource Padding.Touch}" />
  </Style>
  <Style TargetType="Button" x:Key="Button.Secondary">
    <Setter Property="BackgroundColor" Value="Transparent" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Color.Primary.Light}, Dark={StaticResource Color.Primary.Dark}}" />
    <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.Primary.Light}, Dark={StaticResource Color.Primary.Dark}}" />
    <Setter Property="BorderWidth" Value="1" />
    <Setter Property="CornerRadius" Value="{StaticResource Radius.MD}" />
    <Setter Property="Padding" Value="{StaticResource Padding.Touch}" />
  </Style>
  <Style TargetType="Button" x:Key="Button.Amber">
    <Setter Property="BackgroundColor" Value="{StaticResource Color.Amber.Light}" />
    <Setter Property="TextColor" Value="#111111" />
    <Setter Property="CornerRadius" Value="{StaticResource Radius.MD}" />
    <Setter Property="Padding" Value="{StaticResource Padding.Touch}" />
  </Style>

  <!-- Badges / Chips -->
  <Style TargetType="Frame" x:Key="Chip">
    <Setter Property="Padding" Value="8,4" />
    <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource Color.Card.Light}, Dark={StaticResource Color.Card.Dark}}" />
    <Setter Property="CornerRadius" Value="{StaticResource Radius.XS}" />
    <Setter Property="HasShadow" Value="False" />
    <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Color.Border.Light}, Dark={StaticResource Color.Border.Dark}}" />
  </Style>

  <!-- Navigation bar (Windows) -->
  <Style TargetType="NavigationPage">
    <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource Color.Primary.Light}, Dark={StaticResource Color.Primary.Dark}}" />
    <Setter Property="BarTextColor" Value="#FFFFFF" />
  </Style>

</ResourceDictionary>
